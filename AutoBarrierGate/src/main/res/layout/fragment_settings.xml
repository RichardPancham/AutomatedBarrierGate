<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9F6FB"
    tools:context=".SettingsFragment">

    <!-- Payment Methods RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paymentMethodsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/switch1" />

    <!-- User Profiles RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userProfilesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodsRecyclerView" />

    <!-- Sign Out Button -->
    <Button
        android:id="@+id/signout"
        android:layout_width="129dp"
        android:layout_height="81dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:text="Sign Out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userProfilesRecyclerView" />

    <!-- Lock Portrait Switch -->
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Lock Portrait"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
